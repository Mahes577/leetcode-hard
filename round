#include <iostream>
#include<vector>
using namespace std;

int main()
{
    int n,k;
    cin>>n>>k;
    vector<int>v(n);
    for(int i=0;i<n;i++){
        cin>>v[i];
    }
    int d=0;
    for(int j=0;j<n;j++){
        if(v[j]>=v[k-1]&&v[j]>0){
            d++;
        }
    }
    cout<<d;

    return 0;
}
