#include <stdio.h>
int main(void) {
	// your code goes here
	int t;
    scanf("%d", &t);
    while(t--){
        int n;
        scanf("%d", &n);
        switch(n%4){
            case 0:
                printf("%d %d %d\n", n/2-2, n/2, 2);
                break;
            case 1:
                printf("%d %d %d\n", n/2+1, n/2-1, 1);
                break;
            case 2:
                printf("%d %d %d\n", n/2, n/2-1, 1);
                break;
            case 3:
                printf("%d %d %d\n", n/2+2, n/2-2, 1);
                break;
        }
    }
	
	return 0;
}
